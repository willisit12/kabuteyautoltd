<IfModule mod_rewrite.c>
    # This configuration is environment-agnostic. 
    # It works in subdirectories (like /car-website/) and at the root (/)
    # without needing to change RewriteBase.
    RewriteEngine On

    # Stop rewriting for existing files and directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Route everything else to index.php
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Security: Disable directory listing
Options -Indexes

# Default page
DirectoryIndex index.php
