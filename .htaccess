<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # If your site is in a subdirectory (like local XAMPP), set it here:
    # Local: RewriteBase /car-website/
    # cPanel (main domain): RewriteBase /
    RewriteBase /car-website/

    # Stop rewriting for existing files and directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Route everything else to index.php
    RewriteRule ^ index.php [L,QSA]
</IfModule>

# Security: Disable directory listing
Options -Indexes

# Default page
DirectoryIndex index.php
